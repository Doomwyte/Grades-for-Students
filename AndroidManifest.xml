<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dyang.marks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="16" />

    <application
        android:icon="@drawable/aicon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name=".GradesforStudentsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Name"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.dyang.marks.CourseFragmentActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EnterCourses"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EnterCategories"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".EnterGrades"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name=".GradesStats"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name=".StatsOverview"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name=".StatsGrades"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name=".StatsAnalysis"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
    </application>

</manifest>